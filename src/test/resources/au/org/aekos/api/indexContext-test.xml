<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
            http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-4.2.xsd">
	
	<context:property-placeholder location="classpath:/au/org/aekos/api/test-index.properties" />
	
	<context:component-scan base-package="au.org.aekos.api.service.search" use-default-filters="true" />
	
	<bean id="vocabService" class="au.org.aekos.api.service.search.StubVocabService" />
	
	<bean id="termIndexManager" class="au.org.aekos.api.loader.service.index.TermIndexManagerImpl" />
	
	<bean id="loaderClient" class="au.org.aekos.api.loader.service.load.LuceneLoaderClient" />
</beans>
